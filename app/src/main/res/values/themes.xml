<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotificationReader" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@color/colorDivider</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.NotificationReader.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/start</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Button.Yellow" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/button_stop_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">@string/stop</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Theme.NotificationReader.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NotificationReader.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:icon">@drawable/ic_notes</item>
<!--        <item name="android:drawableLeft">?android:attr/listChoiceIndicatorSingle</item>-->
    </style>
</resources>